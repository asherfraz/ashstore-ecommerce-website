{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // ... other options
    "types": ["node"],
    "typeRoots": ["./src/types/", "./node_modules/@types/"]
  },
  "include": ["src","src/*.ts","src/**/*.ts"],
  "exclude": ["node_modules","dist"],
  
}